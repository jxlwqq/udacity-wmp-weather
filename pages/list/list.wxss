/* pages/list/list.wxss */

.date-item {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 40rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1)
}

.day {
  opacity: 0.5;
  font-size: 40rpx;
  line-height: 56rpx;
}

.date {
  opacity: 0.5;
  font-size: 25rpx;
  line-height: 35rpx;
  margin-top: 10rpx;
}

.temp {
  flex-grow: 1;
  text-align: center;
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
}

.icon {
  width: 90rpx;
  height: 90rpx;
}